<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EDIT MY PROJECT</title>
    <link rel="stylesheet" href="/assets/css/my-project.css" />
    <link rel="icon" href="/assets/icon/dumbways.ico" type="image/x-icon">
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid px-4 py-4">
        <a class="navbar-brand" href="/"><img
            class="logo"
            src="/assets/img/dumbways-logo.png"
            alt="dumbways logo"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse ms-5 me-5" id="navbarNav">
          <ul class="navbar-nav grid gap-4">
            {{#if handleLogin}}
              <li class="nav-item">
                <a
                  class="nav-link fs-2 fw-medium"
                  aria-current="page"
                  href="/"
                ><i class="fa fa-home"></i> Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-project"><i class="fa fa-desktop"></i> Add My Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-testimonials"><i class="fa fa-star"></i> My Testimonials</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="#">Hallo
                  {{user}}</a>
              </li>

              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/logout"><i class="fa fa-sign-out"></i> Logout</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link active fs-2 fw-medium"
                  aria-current="page"
                  href="/"
                ><i class="fa fa-home"></i> Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/my-testimonials"><i class="fa fa-star"></i> My Testimonials</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link fs-2 fw-medium"
                  href="/register"
                ><i class="fa fa-registered"></i> Registers</a>
              </li>

              <li class="nav-item">
                <a class="nav-link fs-2 fw-medium" href="/login"><i class="fa fa-sign-in"></i> Login</a>
              </li>
            {{/if}}
          </ul>
        </div>
        <a
          class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0 d-none d-lg-block"
          href="/contact"
          role="button"
        ><i class="fa fa-phone"></i> Contact Me</a>
      </div>
    </nav>

    <main class="main">
      <section class="add-project">
        <div class="container add-project-box">
          <h1 class="project-heading"><i class="fa fa-pencil" ></i> EDIT MY PROJECT</h1>

          <form action="/edit-my-project/{{data.id}}" method="POST">

            <div class="mb-3">
              <label for="exampleInputName" class="form-label fs-2 fw-medium">
                <i class="fas fa-plus-circle"></i> Project Name</label>
              <input
                value="{{data.project_name}}"
                name="projectName"
                type="text"
                class="form-control py-4 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                id="exampleInputName"
                aria-describedby="emailHelp"
              />
            </div>

            <div class="row">
              <div class="mb-3 col pt-2">
                <label
                  for="exampleInputStartDate"
                  class="form-label fs-2 fw-medium"
                ><i class="fa fa-calendar"></i> Start Date</label>
                <input
                  value="{{data.start_date}}"
                  name="startDate"
                  type="date"
                  style="font-size: 2rem"
                  class="form-control py-3 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="exampleInputStartDate"
                />
              </div>
              <div class="mb-3 col pt-2">
                <label
                  for="exampleInputEndDate"
                  class="form-label fs-2 fw-medium"
                ><i class="fa fa-calendar"></i> End Date</label>
                <input
                  value="{{data.end_date}}"
                  name="endDate"
                  type="date"
                  style="font-size: 2rem"
                  class="form-control py-3 px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="exampleInputEndDate"
                />
              </div>
            </div>

            <div class="mb-3">
              <label
                for="floatingTextarea2"
                class="form-label fs-2 fw-medium"
              ><i class="fas fa-info-circle"></i> Your Message</label>
              <div class="form-floating">
                <textarea
                  name="description"
                  class="form-control shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="floatingTextarea2"
                  style="height: 100px"
                >{{data.description}}</textarea>
              </div>
            </div>

            <div class="row">
              <label class="form-label fs-2 fw-medium"><i class="fas fa-cogs"></i> Technologies</label>
              <div class="col checkbox-container d-flex flex-column">
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-node"
                    id="flexCheckDefaultNode"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultNode"
                  >
                    Node Js
                  </label>
                </div>
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-angular"
                    id="flexCheckDefaultAngular"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultAngular"
                  >
                    Angular Js
                  </label>
                </div>
              </div>

              <div class="col checkbox-container d-flex flex-column">
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-react"
                    id="flexCheckDefaultReact"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultReact"
                  >
                    React Js
                  </label>
                </div>
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-java"
                    id="flexCheckDefaultJava"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultJava"
                  >
                    Java
                  </label>
                </div>
              </div>
            </div>

            <div class="mb-5 mt-5">
              <label for="formFile" class="form-label fs-2 fw-medium"><i class="fa fa-camera"></i> Upload
                Image</label>
              <input
                class="form-control form-control-lg py-3 px-2"
                type="file"
                id="formFile"
                style="font-size: 2rem"
              />
            </div>

            <div class="d-flex justify-content-end">
              <button
                type="submit"
                class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0"
                role="button"
              ><i class="fa fa-wrench"></i> Update My Project
              </button>
            </div>
          </form>
        </div>
      </section>

    </main>

    <script src="/assets/script/my-project.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script>
      const selectedTechsIcon = '{{data.technologies}}'; const nodeJs =
      document.getElementById("flexCheckDefaultNode"); const angularJs =
      document.getElementById("flexCheckDefaultAngular"); const reactJs =
      document.getElementById("flexCheckDefaultReact"); const java =
      document.getElementById("flexCheckDefaultJava"); nodeJs.checked =
      selectedTechsIcon.includes("fa-node"); reactJs.checked =
      selectedTechsIcon.includes("fa-react"); angularJs.checked =
      selectedTechsIcon.includes("fa-angular"); java.checked =
      selectedTechsIcon.includes("fa-java");
    </script>
  </body>
</html>