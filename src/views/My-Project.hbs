    <main class="main">
      <section class="add-project">
        <div class="container add-project-box">
          <h1 class="project-heading"><i class="fa fa-desktop"></i> ADD MY PROJECT</h1>

          <form class="project-form" action="/my-project" method="POST">
            <div class="mb-3">
              <label for="exampleInputName" class="form-label fs-2 fw-medium">
                <i class="fas fa-project-diagram"></i> Project Name</label>
              <input
                name="projectName"
                type="text"
                class="form-control px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                id="exampleInputName"
                aria-describedby="emailHelp"
              />
            </div>

            <div class="row">
              <div class="mb-3 col pt-2">
                <label
                  for="exampleInputStartDate"
                  class="form-label fs-2 fw-medium"
                ><i class="fa fa-calendar"></i> Start Date</label>
                <input
                  name="startDate"
                  type="date"
                  style="font-size: 2rem"
                  class="form-control px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="exampleInputStartDate"
                />
              </div>
              <div class="mb-3 col pt-2">
                <label
                  for="exampleInputEndDate"
                  class="form-label fs-2 fw-medium"
                ><i class="fa fa-calendar"></i> End Date</label>
                <input
                  name="endDate"
                  type="date"
                  style="font-size: 2rem"
                  class="form-control px-2 shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="exampleInputEndDate"
                />
              </div>
            </div>

            <div class="mb-3">
              <label
                for="floatingTextarea2"
                class="form-label fs-2 fw-medium"
              ><i class="fas fa-info-circle"></i> Your Message</label>
              <div class="form-floating">
                <textarea
                  name="description"
                  class="form-control shadow p-3 mb-5 bg-body-tertiary rounded border-0"
                  id="floatingTextarea2"
                  style="height: 100px"
                ></textarea>
              </div>
            </div>

            <div class="row">
              <label class="form-label fs-2 fw-medium"><i class="fas fa-cogs"></i> Technologies</label>
              <div class="col checkbox-container d-flex flex-column">
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-node"
                    id="flexCheckDefaultNode"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultNode"
                  >
                    Node Js
                  </label>
                </div>
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-angular"
                    id="flexCheckDefaultAngular"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultAngular"
                  >
                    Angular Js
                  </label>
                </div>
              </div>

              <div class="col checkbox-container d-flex flex-column">
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-react"
                    id="flexCheckDefaultReact"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultReact"
                  >
                    React Js
                  </label>
                </div>
                <div class="form-check">
                  <input
                    name="techIcon"
                    class="form-check-input"
                    type="checkbox"
                    value="fa-java"
                    id="flexCheckDefaultJava"
                  />
                  <label
                    class="form-check-label fs-2"
                    for="flexCheckDefaultJava"
                  >
                    Java
                  </label>
                </div>
              </div>
            </div>

            <div class="mb-5 mt-5">
              <label for="formFile" class="form-label fs-2 fw-medium"><i class="fa fa-camera"></i> Upload
                Image</label>
              <input
                class="form-control form-control-lg px-2"
                type="file"
                id="formFile"
                style="font-size: 2rem"
              />
            </div>

            <div class="d-flex justify-content-end">
              <button
                type="submit"
                class="btn btn-primary px-5 py-3 fs-2 bg-dark rounded-pill border-0"
                href="#"
                role="button"
              ><i class="fa fa-paper-plane"></i> Post My Project
              </button>
            </div>
          </form>
        </div>
