<!DOCTYPE html>
<html lang="en">

<head>
    <title>Creating My Project</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/assets/css/My-Project.css" />

    <style>
         .Blog-list {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
    }
        
        .text-checkbox {
            font-size: 14px;
            display: flex;
            align-items: center;
        }

        .checkbox div {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }

        .checkbox input {
            margin-right: 8px;
        }

        .form-container {
            max-width: 600px;
            margin: auto;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .button-group {
            text-align: center;
        }
    </style>
</head>

<body>
    <nav style="background-color: #f4f3f3; height: 75px;">
        <div style="display: flex; align-items: center; height: 100%; margin-left: 30px; margin-right: 30px;">
            <ul style="display: flex; list-style-type: none; gap: 50px; align-items: center;">
                <li>
                    <img src="/assets/image/dumbways.png" style="height: 50px;" alt="Dumbways" />
                </li>
                <li class="nav-link nav-collapse">
                    <a href="/">
                        Home
                    </a>
                </li>
                <li class="nav-link nav-collapse">
                    <a href="/My-Project">
                        My Project
                    </a>
                </li>
                <li class="nav-link nav-collapse">
                    <a href="/testimonial">
                        Testimonials
                    </a>
                </li>
            </ul>
            <div style="display: flex; width: 100%; justify-content: flex-end;">
                <a href="/contact" class="btn-contact">Contact me</a>
            </div>
        </div>
    </nav>

 <div class="container d-flex flex-column">
        <div class="w-100 d-flex justify-content-end mb-3">
            <a href="/add-My-Project" class="btn btn-primary">Add New My Project</a>
        </div>
        <div id="contents">
            {{#each data}}
            <div class="card mb-3 w-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/assets/image/{{this.image}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a>
                            </h5>
                            <p>
                                {{this.createdAt}} | {{this.author}}
                            </p>
                            <p class="card-text">{{this.content}}</p>
                            <p class="card-text"><small class="text-body-secondary">1 seconds ago
                                </small></p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex" style="height: fit-content;">
                        <a href="/update-blog/{{this.id}}" class="btn btn-secondary">Edit Post My Project</a>
                        <form method="post" action="/delete-blog/{{this.id}}">
                            <button class="btn btn-primary">Delete Post My Project</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="Blog">
        <div class="Blog-form">
            <div class="form-container">
                <form onsubmit="submitData(event)">
                    <h1>ADD MY PROJECT</h1>
                    <div>
                        <label for="inputMyProject">Project Name</label>
                        <input type="text" id="inputMyProject" />
                    </div>
                    <div style="display: flex; gap: 20px;">
                        <div>
                            <label for="startDate">Start Date</label>
                            <input type="date" id="startDate" />
                        </div>
                        <div>
                            <label for="endDate">End Date</label>
                            <input type="date" id="endDate" />
                        </div>
                    </div>
                    <div>
                        <label for="inputContent">Description</label>
                        <textarea id="inputContent"></textarea>
                    </div>
                    <label>Technologies</label>
                    <div class="checkbox">
                        <br>
                        <div>
                            <input type="checkbox" id="inputNodejs" />
                            <label class="text-checkbox">Node Js</label>
                        </div>
                        <div>
                            <input type="checkbox" id="inputNextJs" />
                            <label class="text-checkbox">Next Js</label>
                        </div>
                        <div>
                            <input type="checkbox" id="inputReactjs" />
                            <label class="text-checkbox">React Js</label>
                        </div>
                        <div>
                            <input type="checkbox" id="inputTypescript" />
                            <label class="text-checkbox">TypeScript</label>
                        </div>
                    </div>
                    <br>
                    <div>
                        <label for="inputImage">Choose Image</label>
                        <div class="input-Blog-image-group">
                            <label for="inputImage" class="custom-file-upload">
                                <p class="text-label">Attach File</p>
                                <img src="/assets/icon/file.png" alt="file" style="width: 50px; height: 50px;" />
                            </label>
                            <input type="file" id="inputImage" hidden />
                        </div>
                    </div>
                    <div class="d-flex justify-content-end" style="center">
                    <input type="button" value="Submit" class="btn-submit" onclick="submitData()" />
                    </div>
                </form>
            </div>
        </div>

        <hr class="line" />

        <div>
            <h2 style="text-align: center;">My Projects</h2>
            <div id="contents" class="Blog-list">
                <div class="card-icons">
                    <i class="fa-brands fa-google-play fa-xl"></i>
                    <i class="fa-brands fa-android fa-xl"></i>
                    <i class="fa-brands fa-java fa-lg"></i>
            </div>
        </div>
        
    </div>
    
    <script src="/assets/js/nav.js"></script>
    <script src="/assets/js/My-Project.js"></script>
</body>

</html>